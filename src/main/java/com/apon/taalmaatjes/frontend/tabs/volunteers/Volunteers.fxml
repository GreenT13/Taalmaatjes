<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@Volunteers.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.apon.taalmaatjes.frontend.tabs.volunteers.Volunteers">
   <center>
      <TableView fx:id="tableViewResult" prefHeight="420.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
          <columns>
            <TableColumn styleClass="grayColumnTextId" text="ID" />
            <TableColumn styleClass="grayColumnText" text="Voornaam" />
            <TableColumn styleClass="grayColumnText" text="Achternaam" />
            <TableColumn styleClass="grayColumnText" text="Email" />
          </columns>
          <columnResizePolicy>
              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <VBox fx:id="topVbox" BorderPane.alignment="CENTER_RIGHT">
         <BorderPane.margin>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <HBox id="hboxError" fx:id="hboxError" alignment="CENTER_LEFT">
               <children>
                  <Label id="labelError" fx:id="labelError" text="Label" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <StackPane alignment="CENTER_LEFT" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addVolunteer" text="Toevoegen vrijwilliger" />
                     </children>
                  </StackPane>
                  <TextField fx:id="textFieldSearch" onAction="#onEnter" />
                  <Button id="btnAdvanced" mnemonicParsing="false" onAction="#toggleAdvancedSearch" text="â–¼" />
               </children>
            </HBox>
            <FlowPane fx:id="flowPaneAdvancedSearch" alignment="CENTER_RIGHT">
               <children>
                  <HBox fx:id="random" alignment="CENTER_RIGHT">
                     <children>
                        <Label text="Einddatum" />
                        <TextField />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Label text="Leeftijd:   " />
                        <TextField />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Label text="Startdatum" />
                        <TextField />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Label text="Einddatum" />
                        <TextField />
                     </children>
                  </HBox>
               </children>
            </FlowPane>
         </children>
      </VBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" />
   </padding>
</BorderPane>
