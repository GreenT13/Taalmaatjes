<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--suppress ALL -->

<HBox xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.apon.taalmaatjes.frontend.tabs.task.add.AddTask">
    <children>
        <VBox prefHeight="870.0" prefWidth="536.0">
            <children>
                <HBox fx:id="hboxError">
                    <children>
                        <Label id="labelError" fx:id="labelError" text="Label" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label fx:id="labelTitle" styleClass="largeFont" text="Toevoegen taak" />
                    </children>
                </HBox>
                <HBox prefHeight="384.0" prefWidth="513.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="124.0">
                            <children>
                                <HBox styleClass="hboxAlign">
                                    <children>
                                        <Label text="Vrijwilliger" />
                                    </children>
                                </HBox>
                                <HBox styleClass="hboxAlign">
                                    <children>
                                        <Label text="Titel" />
                                    </children>
                                </HBox>
                                <HBox styleClass="hboxAlign">
                                    <children>
                                        <Label text="Beschrijving" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox prefHeight="384.0" prefWidth="364.0">
                            <children>
                                <HBox styleClass="hboxAlign">
                                    <children>
                              <ComboBox fx:id="comboVolunteer" editable="true" onKeyPressed="#handleActionSearchVolunteers" prefHeight="31.0" prefWidth="280.0" />
                                    </children>
                                </HBox>
                                <HBox styleClass="hboxAlign">
                                    <children>
                                        <TextField fx:id="inputTitle" prefHeight="43.0" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <HBox maxHeight="239.0" minHeight="48.0" prefHeight="239.0" prefWidth="289.0">
                                    <children>
                              <TextArea fx:id="inputDescription" prefHeight="218.0" prefWidth="279.0" wrapText="true" HBox.hgrow="ALWAYS" />
                                    </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                                </HBox>
                                <HBox alignment="CENTER_RIGHT">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#handleActionSave" text="Opslaan">
                                            <HBox.margin>
                                                <Insets right="5.0" />
                                            </HBox.margin>
                                        </Button>
                                        <Button mnemonicParsing="false" onAction="#goBack" text="Terug" />
                                    </children>
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                    <padding>
                                        <Insets right="5.0" top="5.0" />
                                    </padding>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</HBox>
